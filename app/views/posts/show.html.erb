<h1>タイトル</h1>
<p> <%= @post.title %></p>

<h1>本文</h1>
<p> <%= @post.body %></p>

<h1>画像</h1>
<p> <%= attachment_image_tag @post, :image, :fill, 300, 300, format: 'jpeg' %></p>

<%= link_to "編集", edit_post_path(@post.id) %>
<%= link_to "削除", destroy_post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
